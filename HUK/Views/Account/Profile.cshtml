
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>


<div class="row mt-4">
    <div class="col-4">
        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>
        <form asp-action="ProfileChangeFullName" method="post">
            <div class="form-group">
                <label class="form-label small">Name Surname</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" value="@ViewData["FullName"]" placeholder="John Doe">
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk"></i> Save</button>
                </div>
            </div>
        </form>

        <form asp-action="ProfileChangePassword" method="post">
            <div class="form-group">
                <label class="form-label small">New Password</label>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" placeholder="P@ssw0rd!">
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk"></i> Save</button>
                </div>
                @if (ViewData["result"] != null && ViewData["result"] == "PasswordChanged")
                {
                    <span class="text-success small">Password Updated.</span>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @if (ViewData["result"] != null && ViewData["result"] == "PasswordChanged")
    {
        <script>
            toastr["success"]("Password Updated.")
        </script>
    }
}